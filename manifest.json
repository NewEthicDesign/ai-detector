{
  "manifest_version": 3,
  "name": "Black Hole the AI Art & Music Detector",
  "version": "1.0.0",
  "description": "Detect AI-generated images and music using advanced analysis",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://api-inference.huggingface.co/*"
  ]
}